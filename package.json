{
  "name": "authyntic-demo",
  "version": "1.0.0",
  "description": "Interactive web demo of the Authyntic media provenance platform",
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 5173",
    "build": "tsc && vite build",
    "build:lib": "tsc -p tsconfig.build.json && node scripts/prepare-build.cjs",
    "preview": "vite preview --host 0.0.0.0 --port 4173",
    "test": "npm run build:lib && node tests/crypto.test.cjs",
    "clean": "rm -rf node_modules package-lock.json && npm install"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "crypto-js": "^4.2.0",
    "d3": "^7.8.5",
    "recharts": "^2.8.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.1.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.9"
  }
}
