{
  "name": "authyntic-demo",
  "version": "1.0.0",
  "description": "Interactive web demo of the Authyntic media provenance platform",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run build:packages && npm run build:app",
    "build:app": "npm run build:lib && vite build",
    "build:lib": "tsc -p tsconfig.build.json && node scripts/prepare-build.cjs",
    "build:packages": "npm run build --workspaces",
    "preview": "vite preview",
    "test": "npm run build:packages && npm run build:lib && node --test --experimental-test-coverage tests/**/*.test.cjs",
    "lint": "eslint \"{src,packages}/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "crypto-js": "^4.2.0",
    "d3": "^7.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^5.3.5",
    "three": "^0.137.0"
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@types/styled-components": "^5.1.25",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vitejs/plugin-react": "^4.1.0",
    "eslint": "^8.54.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.9"
  }
}
